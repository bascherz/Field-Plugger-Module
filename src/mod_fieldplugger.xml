<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Field Plugger</name>
    <author>Bruce Scherzinger</author>
    <version>2.0</version>
    <creationDate>April 2018</creationDate>
    <description>Replaces placeholders in an HTML structure with module parameter values.</description>
    <files>
        <filename>mod_fieldplugger.xml</filename>
        <filename module="mod_fieldplugger">mod_fieldplugger.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>fieldplug.xml</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
				<field
					name="prepare_content"
					type="radio"
					label="Prepare Content:"
					description="Optionally prepare the content with the Joomla content plugins."
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
                <field
                    name="tablehtml"
                    description="HTML code containing placeholders for where to insert field data entered above. Put field names in curly braces like [field1] where you want the data values."
                    type="editor"
                    filter="safehtml"
                    default=""
                    height="40"
                    label="Custom HTML:" />
                <field name="plugs" type="subform"
                    label="Field Values:"
                    description="Define as many plugs as you need."
                    formsource="/modules/mod_fieldplugger/fieldplug.xml"
                    multiple="true"
                    min="1"
                    layout="joomla.form.field.subform.repeatable"
                />
            </fieldset>
        </fields>
    </config>
    <install>
    </install>
    <uninstall>
    </uninstall>
    <updateservers>
        <server type="extension" name="Field Plugger Update Site">https://raw.githubusercontent.com/bascherz/Field-Plugger-Module/master/manifest.xml</server>
    </updateservers>
    </extension>